@RenderBody()

<script>
    String.prototype.capitalize = function () {
        return this.replace(/(?:^|\s)\S/g, function (a) { return a.toUpperCase(); });
    };
    $("input[maxstr]").each(function (index, element) {
        var length = parseInt($(this).attr("maxstr"));
        $(this).prop("maxlength", length);
    });
    $(".moneyinput").on('input', '', function () {
        //debugger;
        var str = $(this).val();
        str = str.replace(/[^0-9]/, '');
        this.value = str;
        if (str.length > 0) {
            $('#errprincipal').text(" ");
        };
    });
    $(".acronym").on('input', '', function () {
        //debugger;
        var str = $(this).val();
        str = str.replace(/\W/, '');
        this.value = str;
    });
    $(".irinput").on('input', '', function () {
        //debugger;
        var str = $(this).val();
        str = str.replace(/[^0-9.]/, '');
        str = str.replace(/[.]+/, '.');
        if (/^[0-9]{0,2}[.]{0,1}[0-9]{0,3}$/.test(str) == false) {
            $('#errir').text("Vui lòng nhập đúng kiểu dữ liệu: xx.xxx");
        }
        else {
            $('#errir').text(" ");
        };
        this.value = str;
    });
    $(".dirinput").on('input', '', function () {
        //debugger;
        var str = $(this).val();
        str = str.replace(/[^0-9.]/, '');
        str = str.replace(/[.]+/, '.');
